{% load navigation %}
{% load linkset %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>{% block title %}Queen's Journal{% endblock title %}</title>
<link rel="stylesheet" type="text/css" href="/media/styles/journal.css" media="screen" title="Default" />
{% block head-code %}{% endblock head-code %}
</head>
<body>

<div id="header-banner">
	<div id="header-container-{% block header-type %}primary{% endblock header-type %}" class="header-container clearfix">
		<a href="/"><img src="/media/global/{% block header-img %}journal_header_a_small.gif{% endblock header-img %}" id="logo" /></a>
		<img src="/media/global/journal-print-logo.gif" id="logo-print" width="1" height="1" />
		<div id="dateline">{% block dateline %}{% endblock dateline %}</div>
		<div id="issueline">{% block issueline %}{% endblock issueline %}</div>
	</div>
</div>
		
<div id="body-container" class="clearfix">
	<div id="content-{% block layout-type %}wide-2cols{% endblock layout-type %}" class="content">
		<div id="topbar" class="clearfix">
			<div id="breadcrumb"><p>{% block breadcrumb %}{% endblock breadcrumb %}</p></div>
			{% block actions %}{% endblock actions %}
		</div>
		{% block issue-banner %}
		{% endblock issue-banner %}
		{% block content %}
		{% endblock content %}
	</div>
	<div id="menu-{% block menu-type %}narrow{% endblock menu-type %}" class="menu">
		<div id="menu-sections">
		{% menu_sections %}
		</div>
		<div id="menu-online-sections">
			<ul>
				<li><a href="{% url all_blogs %}">Blogs</a></li>
			</ul>
		</div>
		<div id="menu-archives">
		{% issue_archives as issues %}
			<p class="menu-label">Archives</p>
			<form action="http://www.google.com/search" method="get">
				<input type="text" name="q" onblur="if(this.value=='') this.value = 'Search via Google';" onfocus="if(this.value=='Search via Google') this.value = '';" value="Search via Google" />
				<input type="hidden" name="sitesearch" value="queensjournal.ca" />
			</form>
			<form action="{% url journal.stories.views.get_issue %}" method="get">
				<select name="issue" id="archives-issueselect" onchange="if(this.options[this.selectedIndex].value != 0) submit();">
					<option disabled selected value="0">Archives by date</option>
					{% for backissue in issues %}
					<option id="issueselect{{ backissue.id }}" value="{{ backissue.id }}">{{ backissue.pub_date|date:"F jS, Y" }}</option>
					{% endfor %}
				</select>
			</form>
		</div>
		<div id="menu-static">
			{% linkset 'main' as links %}
			<ul>
				{% for link in links %}
					<li><a href="{{ link.url }}">{{ link.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
		{% block poll %}{% endblock poll %}
		<div id="menu-stories">
		{% block menu-stories %}{% endblock menu-stories %}
		</div>
	</div>
</div>

<div id="footer-container" class="clearfix">
	<div id="address" class="clearfix">
		<p id="nameplate">The Queen's Journal</p>
		<p>190 University Ave.<br/>Kingston, ON<br/>K7L 3P4</p>
		<p>Editorial office: (613) 533-2800<br/>Business office: (613) 533-6711<br/>Fax: (613) 533-6728</p>
		<p>For <strong>website inquiries</strong> only:<br/><a href="mailto:journal_web@ams.queensu.ca">journal_web@ams.queensu.ca</a><br />See the <a href="http://www.queensjournal.ca/masthead/">Masthead</a> page for a full list of contacts.</p>
	</div>
</div>
